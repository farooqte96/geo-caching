extends layout

block append scripts
  script.
    var data = document.getElementById('data').innerHTML;
    setTimeout(function(){
    updatedList(data)
    },2000);

block content
  h2 #{title}

  //get items list (i.e. itemsMap) and pass it to script function above updatedList

  p(id='data', style='display:none;') #{itemsMap}
  br
  ul.list-group
    each item, i in items
      li.list-group-item
        a(href="/item/"+item._id )=item.name
  br
